{
  "name": "@kafka-playground/kafka-playground",
  "license": "MIT",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ignore-path .gitignore",
    "build": "yarn workspaces run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/test-listen": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.2",
    "jest": "^24.5.0",
    "lerna": "^3.4.0",
    "prettier": "^1.16.4",
    "test-listen": "1.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "no-undef": 2,
      "no-unused-vars": 2
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "browser": true
    },
    "globals": {
      "__DEV__": true
    }
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.5.0"
  }
}
