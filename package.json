{
  "name": "@hanse/kafka-playground",
  "license": "NO",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ignore-path .gitignore"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "eslint": "5.6.0",
    "jest": "23.6.0",
    "prettier": "^1.14.3",
    "test-listen": "1.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "no-undef": 2,
      "no-unused-vars": 2
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "browser": true
    },
    "globals": {
      "__DEV__": true
    }
  }
}
